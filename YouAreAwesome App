import SwiftUI

struct ContentView: View {
    @State private var messageString = ""
    @State private var imageName = ""
    @State private var imageNumber = 0
    @State private var messageNumber = 0
    var body: some View {
        
        
        VStack {
            
            Image(imageName)
                .resizable()
                .scaledToFit()
                .cornerRadius(30)
                .shadow(radius: /*@START_MENU_TOKEN@*/12/*@END_MENU_TOKEN@*/)
                .imageScale(/*@START_MENU_TOKEN@*/.large/*@END_MENU_TOKEN@*/)
            
            
            Spacer()
            
            
            Text(messageString)
                .font(.largeTitle)
                .fontWeight(.heavy)
                .minimumScaleFactor(0.5)// scales font down
                .multilineTextAlignment(.center)// helps align the text to the center
                .foregroundColor(.red)
                .frame(height: 150)
                .frame(height: 150)// frame helps to keep the buttons fixed
                .frame(maxWidth: .infinity)
                .padding()
            
            
            Spacer()
            
            Button("Show Message") {
                
                let messages = ["You Are Awesome",
                                "You Are Great",
                                "Fabulous? That's You",
                                "You Are Extroadinary! "]
                // messageString = (messageString == message1 ? message2 : message1)
                let messageRoll = Int.random(in: 0...messages.count-1)
                
                messageString = messages[messageRoll]
                messageNumber += 1
                if messageNumber == messages.count{
                    messageNumber = 0
                }
                
                //TODO: update the imageName variable
                let imageRoll = Int.random(in: 0...9)
                imageName = "image\(imageRoll)"

            }
            
        }
        .buttonStyle(.borderedProminent)
        
        .padding()
    }
    
}


struct ContentView_Previews: PreviewProvider {
    static var previews: some View {
        ContentView()
    }
}


